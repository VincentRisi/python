PROC ByAuthor
INPUT
  authorId =(_Id)
OUTPUT
  bookName =(_Name)
  seriesId =(_Id)
  bookSeq  =(_Book)
SQLCODE
  select bookName, seriesId, bookSeq from Book
  where authorId = :authorId
  order seriesId, bookSeq, bookName
ENDCODE


