    seriesId    =(_Id) null
    bookSeq     =(_Book)
    comment     =(_Cmt)
    description =(_Des)
    genre       =(_List)
    released    Date

KEY  BookPK PRIMARY bookId
LINK Series seriesID
LINK Author authorId    

