PROC  INSERT 
PROC  Update


PROC GetByMessage 
INPUT
  MessageID =
OUTPUT
  ID     =
  Tag    =
  Value     =
  DataType  =
SQLCODE
  SELECT
    ID,
    Tag,
    Value,
    DataType,
  FROM
    MetaData md
  WHERE
    md.MessageID = :MessageID
ENDCODE


//# Used By : 
PROC GetByMessageTag
INPUT
  MessageID =
  Tag       =
OUTPUT (single)
  Value       =
  DataType    =
SQLCODE
   SELECT
      Value
      ,DataType
   FROM
      MetaData
   WHERE
     MessageID = :MessageID
     AND Tag   = :Tag
ENDCODE

//# Used By : famqout
PROC GetByMessageTags
INPUT
  MessageID =
  Tags      char(1024)
OUTPUT //(multiple)
  Tag       =
  Value     =
  DataType  =
SQLCODE
   SELECT
       Tag
      ,Value
      ,DataType
   FROM
      MetaData
   WHERE
     MessageID = :MessageID
     AND Tag in :Tags(1024)
ENDCODE


//# Used By : 
PROC GetByMessageTagInt
INPUT
  MessageID =
  Tag       =
OUTPUT (single)
  Value       int
  DataType    =
SQLCODE
   SELECT
      TO_NUBBER(Value, '999999999')
      ,DataType
   FROM
      MetaData
   WHERE
     MessageID = :MessageID
     AND Tag   = :Tag
ENDCODE

