DATABASE MCPE 
//FLAGS "xmlValue"
PACKAGE  putty.bulk
//USING    Bbd.Portal
OUTPUT   Message
SERVER   PUTTY

TABLE MetaData
  ID          Sequence
  MessageID   int
  ChildID     int
  Tag         char  (24)       { MQ_REPORT_FLAG, MQ_CORELLID, MQ_MESSAGEID, MQ_REPLY_QUEUE }
  Value       char  (128)
  DataType    byte             ( StringType = 1, IntegerType = 2, DoubleType = 3, DateType = 4 )
  USId        char  (16)
  TMStamp     timestamp

KEY MetaDataKey PRIMARY ID
KEY KEY01 UNIQUE 
   MessageID 
   ChildID 
   Tag

KEY KEY02
   ChildID
   Tag

KEY KEY03
   Tag
   Value



//KEY TagValue Tag Value  # Added by caz, 20050902

